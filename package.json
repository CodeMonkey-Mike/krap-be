{
  "name": "krap-be",
  "version": "0.2.0",
  "description": "A backend boilerplate get started a new project.",
  "engines": {
    "node": ">=12.x"
  },
  "scripts": {
    "local": "nodemon",
    "dev": "NODE_ENV=development ts-node src/server.ts",
    "build": "NODE_ENV=production tsc --project .",
    "start": "ts-node dist/server.js",
    "migration:generate": "typeorm migration:create -n UserMigration",
    "format": "prettier --list-different 'src/**/*.{js,jsx,ts,tsx,json,htm,html}'",
    "format:fix": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,htm,html}'",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/utils/ormconfig.ts",
    "grantps": "chmod 755 ./localdb.sh",
    "localdb": "yarn grantps && ./localdb.sh"
  },
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "apollo-server-koa": "^2.16.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "jest": "^26.4.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-redis": "^4.0.1",
    "koa-router": "^9.1.0",
    "koa-session": "^6.0.0",
    "kors": "^1.0.0",
    "nodemailer": "^6.4.11",
    "nodemon": "^2.0.12",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.10",
    "type-graphql": "^1.0.0",
    "typeorm": "^0.2.37",
    "uuid": "^8.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.12",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-redis": "^4.0.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa-session": "^5.10.2",
    "@types/node": "^8.0.29",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "bcrypt": "^5.0.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "npm": "^6.14.8",
    "ts-node": "3.3.0",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,ts,json}": [
      "npm run lint:fix"
    ]
  }
}
